<includes>
<!-- ===================================================================================== -->
<!-- ============================== TV HALF WALL VIEW ID 560 ================================ -->
<!-- =================================== TV Only ===================================== -->
	<include name="HalfWallTV">
		<control type="group">
		<animation type="WindowOpen" reversible="false">
				<effect type="zoom" start="80" end="100" center="640,360" easing="out" tween="back" time="300" />
				<effect type="fade" start="0" end="100" time="300" />
				</animation>
				<animation type="WindowClose" reversible="false">
				<effect type="zoom" start="100" end="80" center="640,360" easing="in" tween="back" time="300" />
				<effect type="fade" start="100" end="0" time="300" />
			</animation>      
			<control type="image"> <!-- darken the background a bit -->
				<posx>0</posx>
				<posy>0</posy>
				<width>660</width>
				<height>720</height>
				<aspectratio>stretch</aspectratio>
 				<texture>black-back.png</texture>
 				<visible>Container.Content(Episodes)</visible>
				<visible>Control.IsVisible(560)</visible>
			</control>
			<control type="image"> <!-- right panel behind the wall -->
				<posx>620r</posx>
				<posy>0</posy>
				<width>620</width>
				<height>720</height>
				<texture border="15,0,0,0">homesubbackground.png</texture>
 				<visible>Container.Content(Episodes)</visible>
				<visible>Control.IsVisible(560)</visible>
			</control>
			<!-- PANEL -->
			<control type="panel" id="560">
			<visible>Skin.HasSetting(halfwalltv_view)</visible>
				<posx>620</posx>
				<posy>50</posy>
				<width>680</width>
				<height>650</height>
				<onleft>2</onleft>
				<onright>70</onright>
				<onup>560</onup>
				<ondown>560</ondown>
				<viewtype label="41124">panel</viewtype>
 				<visible>Container.Content(Episodes)</visible>
				<pagecontrol>70</pagecontrol>
				<scrolltime>200</scrolltime>
				<preloaditems>200</preloaditems>
				<itemlayout condition="Container.Content(Episodes) | [Container.Content(Episodes) + Skin.HasSetting(fanartTVLogos)]" height="135" width="200">
					<control type="image">
						<posx>55</posx>
						<posy>25</posy>
						<width>187</width>
						<height>124</height>
						<aspectratio>stretch</aspectratio>
						<fadetime>200</fadetime>
						<texture background="true">$INFO[ListItem.Icon]</texture>
						<bordertexture border="10">ThumbBorder.png</bordertexture>
						<bordersize>10</bordersize>
					</control>
					<control type="image">
						<posx>200</posx>
						<posy>100</posy>
						<width>35</width>
						<height>35</height>
						<aspectratio>keep</aspectratio>
						<texture>$INFO[ListItem.Overlay]</texture>
					</control>
					<control type="image">
						<posx>55</posx>
						<posy>25</posy>
						<width>187</width>
						<height>124</height>
						<aspectratio>stretch</aspectratio>
						<texture background="true">black-back3.png</texture> 
					</control>
				</itemlayout>
				<focusedlayout condition="Container.Content(Episodes)" height="200" width="250">
					<control type="image">
						<posx>55</posx>
						<posy>25</posy>
						<width>187</width>
						<height>124</height>
						<aspectratio>stretch</aspectratio>
						<fadetime>200</fadetime>
						<texture background="true">$INFO[ListItem.Icon]</texture>
						<bordertexture border="8">ThumbBorder.png</bordertexture>
						<bordersize>8</bordersize>
					</control>
					<control type="image">
						<posx>200</posx>
						<posy>100</posy>
						<width>35</width>
						<height>35</height>
						<aspectratio>keep</aspectratio>
						<texture>$INFO[ListItem.Overlay]</texture>
					</control>
				</focusedlayout>cusedlayout>
			</control>
			<control type="group"> <!-- Labels -->
				<posx>20</posx>
				<posy>120</posy>
				<visible>Container.Content(Episodes)</visible>
				<visible>Control.IsVisible(560)</visible>
				<control type="label">
					<posx>220</posx>
					<posy>-50</posy>
					<width>380</width>
					<height>30</height>
					<font>cirrus_50</font>
					<textcolor>grey2</textcolor>
					<shadowcolor>black</shadowcolor>
					<scroll>false</scroll>
					<align>left</align>
					<aligny>center</aligny>
					<label>$INFO[ListItem.TVShowTitle]</label>
					<scrollout>false</scrollout>
					<pauseatend>2000</pauseatend>
				</control>
				<control type="label">
						<posx></posx>
						<posy>10</posy>
						<width>230</width>
						<height>30</height>
						<font>cirrus_20</font>
						<textcolor>white</textcolor>
						<shadowcolor>black</shadowcolor>
						<selectedcolor>selected</selectedcolor>
						<align>left</align>
						<aligny>bottom</aligny>
						<label>[COLOR=orange]$LOCALIZE[20373]:[/COLOR] $INFO[ListItem.Season] [COLOR=orange]$LOCALIZE[20359]: [/COLOR]$INFO[ListItem.Episode]</label>
						<scroll>true</scroll>
					</control>
					<control type="label">
						<posx>0</posx>
						<posy>40</posy>
						<width>400</width>
						<height>27</height>
						<font>cirrus_30</font>
						<textcolor>grey2</textcolor>
						<shadowcolor>black</shadowcolor>
						<selectedcolor>selected</selectedcolor>
						<align>left</align>
						<aligny>bottom</aligny>
						<label>$INFO[ListItem.Title]</label>
						<scroll>true</scroll>
					</control>
				<control type="fadelabel">
					<posx>0</posx>
					<posy>80</posy>
					<width>220</width>
					<height>30</height>
					<font>cirrus_30</font>
					<textcolor>white</textcolor>
					<shadowcolor>black</shadowcolor>
					<scroll>true</scroll>
					<align>left</align>
					<aligny>center</aligny>
					<label>[COLOR=orange]$INFO[ListItem.Year][/COLOR] $INFO[ListItem.Duration]</label>
					<scrollout>false</scrollout>
					<pauseatend>2000</pauseatend>
					<visible>SubString(ListItem.Duration,mins)</visible>
				</control>
				<control type="fadelabel">
					<posx>0</posx>
					<posy>80</posy>
					<width>220</width>
					<height>30</height>
					<font>cirrus_30</font>
					<textcolor>white</textcolor>
					<shadowcolor>black</shadowcolor>
					<scroll>true</scroll>
					<align>left</align>
					<aligny>center</aligny>
					<label>[COLOR=orange]$INFO[ListItem.Year][/COLOR] $INFO[ListItem.Duration] mins</label>
					<scrollout>false</scrollout>
					<pauseatend>2000</pauseatend>
					<visible>!SubString(ListItem.Duration,mins)</visible>
				</control>
				<control type="textbox">
					<description>Movie Plot</description>
					<posx>0</posx>
					<posy>120</posy>
					<width>620</width>
					<height>90</height>
					<font>cirrus_20</font>
					<align>justify</align>
					<textcolor>white</textcolor>
					<label>$INFO[ListItem.Plot]</label>
					<autoscroll time="2000" delay="3000" repeat="5000">Skin.HasSetting(AutoScroll)</autoscroll>
				</control>
			</control>
			<control type="group"> <!-- Fanart and media flags -->
				<posx>10</posx>
				<posy>330</posy>
				<width>640</width>
				<height>360</height>
				<animation type="WindowOpen" reversible="false">
				<effect type="zoom" start="80" end="100" center="640,360" easing="out" tween="back" time="300" />
				<effect type="fade" start="0" end="100" time="300" />
				</animation>
				<animation type="WindowClose" reversible="false">
				<effect type="zoom" start="100" end="80" center="640,360" easing="in" tween="back" time="300" />
				<effect type="fade" start="100" end="0" time="300" />
				</animation>      
 				<visible>Container.Content(Episodes)</visible>
				<visible>Control.IsVisible(560)</visible>
				<control type="image">
					<posx>10</posx>
					<posy>45</posy>
					<width>540</width>
					<height>303</height>
					<aspectratio aligny="bottom">stretch</aspectratio>
					<fadetime>FanartCrossfadeTime</fadetime>
					<texture>DialogBackground.png</texture>
					<bordertexture border="8">ThumbBorder.png</bordertexture>
					<bordersize>12</bordersize>
					<colordiffuse>888A8A8A</colordiffuse>
					<visible>!Player.HasVideo | !Skin.HasSetting(videowindownoborder) | !Skin.HasSetting(videowindowglobal)</visible>
					<visible>!IsEmpty(ListItem.Thumb)</visible> 
				</control>
				<control type="image">
					<posx>24</posx>
					<posy>59</posy>
					<width>512</width>
					<height>275</height>
					<aspectratio>stretch</aspectratio>
					<fadetime>IconCrossfadeTime</fadetime>
					<texture background="true">$INFO[ListItem.Icon]</texture>
					<visible>!Player.HasVideo | !Skin.HasSetting(videowindowglobal)</visible>
				</control>
					<control type="videowindow" id="8">
					<posx>24</posx>
					<posy>61</posy>
					<width>513</width>
					<height>270</height>
					<visible>Skin.Hassetting(videowindowglobal)</visible>
					<visible>Control.IsVisible(560)</visible>
				</control> 
					<control type="label">
					<description>Title label</description>
					<posx>120</posx>
					<posy>290</posy>
					<height>30</height>
					<width>330</width>
					<label>$INFO[VideoPlayer.Title]$INFO[VideoPlayer.Year,[COLOR=orange] (,)[/COLOR]]</label>
					<align>center</align>
					<aligny>center</aligny>
					<font>cirrus_20</font>
					<textcolor>white</textcolor>
					<shadowcolor>black</shadowcolor>
					<visible>Skin.HasSetting(videowindowglobal)</visible>
					<visible>Control.IsVisible(560)</visible>
					<visible>Player.HasVideo</visible>
				</control>
				<control type="grouplist">
					<description>Media Codec Flagging Images</description>
					<posx>560</posx>
					<posy>-300</posy>
					<width>640</width>
					<align>center</align>
					<itemgap>30</itemgap>
					<orientation>vertical</orientation>
		            <include condition="!Skin.HasSetting(newFlags)">VideoCodecFlaggingConditions</include>
                    <include condition="!Skin.HasSetting(newFlags)">AudioCodecFlaggingConditions</include>
                    <include condition="!Skin.HasSetting(newFlags)">AspectCodecFlaggingConditions</include>
                    <include condition="Skin.HasSetting(newFlags)">VideoCodecFlaggingConditionsNew</include>
                    <include condition="Skin.HasSetting(newFlags)">AudioCodecFlaggingConditionsNew</include>
                    <include condition="Skin.HasSetting(newFlags)">AspectCodecFlaggingConditionsNew</include>
				</control>
			</control>
			
		</control>
	</include>
</includes>
